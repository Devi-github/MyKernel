#!/bin/sh

# Config file for Debian-based distros. Created for github actions

echo "Configuring system for build of system"

apt-get update
apt-get install -y gcc make nasm
# QEMU only for emulation
# sudo apt install qemu -y
# sudo apt install qemu-system-x86 -y
apt-get install -y xorriso mtools grub2-common grub-pc
