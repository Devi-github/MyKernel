#!/bin/sh

# Config file for Debian-based distros. Created for github actions

echo "Configuring system for build of system"

sudo apt-get update
sudo apt-get install -y gcc make nasm
# QEMU only for emulation
# sudo apt-get install qemu -y
# sudo apt-get install qemu-system-x86 -y
sudo apt-get install -y xorriso mtools grub2-common grub-pc
